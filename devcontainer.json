{
  "name": "ros2setup",
  "dockerComposeFile": "docker-compose.yml",
  "initializeCommand": "cd ${localWorkspaceFolder}/.devcontainer/ros2docker/ && bash copy_robot_setup.sh",
  "service": "robot1",
  "workspaceFolder": "/home/ubuntu/ros2_ws",
  "workspaceMount": "source=${localWorkspaceFolder}/src,target=/home/ubuntu/ros2_ws/src,type=bind",
//  "remoteUser": "ubuntu",

  "customizations": {
    "jetbrains": {
      "backend": "CLion",
      "plugins": [
        "com.intellij.bash",
        "Docker",
        "org.jetbrains.plugins.terminal",
        "com.jetbrains.plugins.cmake",
        "Python"
      ]
    },
    "vscode": { // not fully tested yet
      "settings": {
        // Enable Ptrace for effective debugging
        "terminal.integrated.defaultProfile.linux": "bash",
        "C_Cpp.default.intelliSenseMode": "gcc-x64"
      },
      "extensions": [
        "ms-vscode.cpptools", // The official C/C++ extension
        "ms-vscode.cmake-tools", // CMake integration
        "llvm-vscode-extensions.vscode-clangd" // Clangd support
      ]
    }
  },

//  "forwardPorts": [6080, 5901],
//
//  "portsAttributes": {
//    "6080": { "label": "noVNC Web", "protocol": "http" }
//  },

  "shutdownAction": "stopCompose",

  "overrideCommand": false,

  "runServices": ["robot1"],
}
